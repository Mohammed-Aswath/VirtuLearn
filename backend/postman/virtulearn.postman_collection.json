{
  "info": {
    "name": "VirtuLearn API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [ {"key": "Content-Type", "value": "application/json"} ],
        "url": { "raw": "{{baseUrl}}/api/auth/register", "host": ["{{baseUrl}}"], "path": ["api","auth","register"] },
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Alex\",\n  \"email\": \"alex@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"student\"\n}" }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [ {"key": "Content-Type", "value": "application/json"} ],
        "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] },
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"alex@example.com\",\n  \"password\": \"password123\"\n}" }
      }
    },
    {
      "name": "Experiments - List",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/api/experiments?subject=Physics", "host": ["{{baseUrl}}"], "path": ["api","experiments"], "query": [{"key":"subject","value":"Physics"}] }
      }
    },
    {
      "name": "Quizzes - List",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/api/quizzes?subject=Physics", "host": ["{{baseUrl}}"], "path": ["api","quizzes"], "query": [{"key":"subject","value":"Physics"}] }
      }
    }
  ],
  "variable": [ { "key": "baseUrl", "value": "http://localhost:8081" } ]
}


